{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 700,
  "title": "Locations of Commonwealth funded Indigenous Ranger Program",
  "projection": {
    "type": "mercator",
    "center": {"expr": "middle_at"},
    "scale": {
      "expr": "if(middle_at[0] == 0 && middle_at[1] == 0, zooming, if(zooming == 150, 350, zooming))"
    }
  },
  "params": [
      {
        "name": "zooming",
        "value": 600,
        "bind": {
          "input": "range",
          "min": 400,
          "max": 1200,
          "step": 10,
          "name": "Zoom: "
        }
      },
      {
      "name": "middle_at",
      "value": [140, -25],
      "bind": {
      "input": "select",
      "options": [

        [134, -25],
        [147, -32],
         [144, -37],
         [146, -21],
         [134, -30],
         [121, -25],
         [147, -42],
         [133, -19],
         [149, -35]
      ],
      "labels": [
      "Select A State",
        "New South Wales",
        "Victoria",
        "Queensland",
        "South Australia",
        "Western Australia",
        "Tasmania",
        "Northern Territory",
        "Australian Capital Territory"

      ],
      "name": "Map Centre: "
      }
      }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/gsin0055/DV2/refs/heads/main/Data/Australian_map.json",
        "format": {"type": "topojson", "feature": "STE_2021_AUST_GDA2020"}
      },
      "mark": {"type": "geoshape", "fill": "lightblue", "stroke": "white"}
    },
    {
      "data": {
        "url": "../Data/ne_110m_graticules_10.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_10"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "black"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/gsin0055/DV2/refs/heads/main/Data/indigenous_ranger_program_323973700297884924.csv"
      },
      "mark": {"type": "circle", "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "LONGITUDE", "type": "quantitative"},
        "latitude": {"field": "LATITUDE", "type": "quantitative"},
        "color": {
          "field": "NO_MAP",
          "type": "quantitative",
          "title": "Number of Rangers",
          "scale": {"scheme": "reds"}
        },
        "tooltip": [
          {"field": "NAME", "type": "nominal", "title": "Name"},
          {"field": "NO_MAP", "type": "quantitative", "title": "Number of Rangers"},
          {"field": "STATE", "type": "nominal", "title": "State"}
        ]
      }
    }

  ]
}